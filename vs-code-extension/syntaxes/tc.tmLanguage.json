{
  "scopeName": "source.tc",
  "name": "TuraCode",
  "patterns": [
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.tc",
          "match": "\\b(?:ata|hola|dakao|godi|na|holae|calay|gao)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.tc",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "name": "constant.character.escape.tc", "match": "\\\\." }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.tc",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.tc",
          "match": "[+\\-*/<>]=?|==|=|\\+\\+"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.tc",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}