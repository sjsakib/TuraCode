{
  "scopeName": "source.tc",
  "name": "TuraCode",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.tc",
          "begin": "//",
          "beginCaptures": { "0": { "name": "punctuation.definition.comment.tc" } },
          "end": "$\\n?",
          "patterns": []
        },
        {
          "name": "comment.block.tc",
          "begin": "/\\*",
          "beginCaptures": { "0": { "name": "punctuation.definition.comment.begin.tc" } },
          "end": "\\*/",
          "endCaptures": { "0": { "name": "punctuation.definition.comment.end.tc" } },
          "patterns": []
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.tc",
          "match": "\\b(?:ata|hola|dakao|godi|na|holae|calay|gao)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.tc",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "name": "constant.character.escape.tc", "match": "\\\\." }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.tc",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.tc",
          "match": "[+\\-*/<>]=?|==|=|\\+\\+"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.tc",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}